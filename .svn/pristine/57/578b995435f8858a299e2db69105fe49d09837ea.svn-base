@CHARSET "utf-8";
.tabletitle{
	font-size:22px;
	font-family:"微软雅黑";	
	color:#2689CB;
	padding-left: 12px;
	padding-top: 16px;
	padding-bottom:14px;
}

.box-header{
	margin:0 auto;
	width:85%;	
	border-bottom: 1px dotted #e2e2e2;
	margin-bottom:12px;
}

.table{
	border: 1px solid #ddd;
	width: 85%;
	margin-bottom: 20px;
	margin:0 auto ;
}

.tablestyle{
	margin:0 auto;
	width:90%;	
}


.theadstyle{
	color:#707070;
	background-image: -moz-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0%,rgb(248,248,248)),color-stop(100%,rgb(237,237,237)));
	background-image: -webkit-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: -o-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: -ms-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
}


.table thead tr th{
	text-align: left;	
	border-color:#ddd;
	font-weight:bold;
	vertical-align:center;
}

.table > thead > tr > th{
	color:#707070;
    padding:8px;
	line-height: 1.4;
	border: 1px solid #DDD;
	border-bottom-width: 2px;
	background-image: -moz-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0%,rgb(248,248,248)),color-stop(100%,rgb(237,237,237)));
	background-image: -webkit-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: -o-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: -ms-linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
	background-image: linear-gradient(top,rgb(248,248,248) 0%,rgb(237,237,237) 100%);
}

.table tbody tr td{
	text-align:left;
	vertical-align:center;	
	padding:8px;
	line-height: 1.4;
	border: 1px solid #DDD;
	font-size:12px;
}

.table>tbody>tr{ background-color:expression('#ff0000,#00ff00'.split(',')[rowIndex%2]);}

.table>tbody>tr:hover>td {
	color:#333333;
	background-color: #f5f5f5;
}

.pagestyle{
	text-align:center;
}

.datacountstyle{
	font-size:14px;
	color: #8F89A8;
	width: 85%;
	margin: 0 auto;
	text-align:right;
}

.more{
	width: 85%;
	margin: 0 auto;
	text-align:right;
	margin-top:20px;
}

.more a{
	font-size:14px;
	color: #8F89A8;
	
}

.more a:hover{
	color:#3DA0D1;
}

.selectstyle{
	width:85%;
	margin:0 auto;	
}
.selectstyle select{
	color:#585858;	
}

.control-group{
	font-size: 14px;
	font-family: '微软雅黑';	
	margin-bottom:6px;
}

